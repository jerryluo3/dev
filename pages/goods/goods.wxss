/* pages/goods/goods.wxss */


.goods_img{width:100%;}
.goods_img image{width:100%;height:700rpx;display:block}


.goods_price_block{padding:10px 20rpx 0;background:#fff;}
.goods_price{display:block;}
.goods_price_item{display:inline-block;font-size:28rpx;margin-right:10rpx;}
.goods_redprice{color:#e40064;}
.goods_stocks{font-size:24rpx;color:#888;}
.big_price{font-size:34rpx;}

.goods_share{width:60rpx;text-align:content;padding:10rpx;position:relative}
.goods_share image{width:60rpx;height:60rpx;margin:0 15rpx;display:block;}
.goods_share text{display: block;text-align:center;font-size:24rpx;}
.share_btn{position: absolute;top:0;right:0;left:0;bottom:0;}

.goods_haibao{width:70rpx;text-align:content;padding:10rpx 0 0;position:relative}
.goods_haibao image{width:40rpx;height:40rpx;margin:0 15rpx;display:block;}
.goods_haibao text{display: block;text-align:center;font-size:24rpx;}

.goods_title{padding:20rpx;border-bottom:1rpx solid #ddd;background:#fff;}

.goods_content{display: block;padding:10rpx;margin:20rpx 0 0;background:#fff;}
.goods_content_title{border-bottom:1rpx solid #ddd;font-size:28rpx;color:#333;line-height:60rpx;}
.goods_content_main{display: block;font-size:24rpx;color:#888;padding:20rpx 0 80rpx;}
.goods_content_main image{display:block;width:100%;}

.goods_attr{background:#fff;padding:30rpx;margin:20rpx 0;font-size:28rpx;}
.goods_attr_row{line-height:60rpx;border-bottom:1rpx solid #eee;padding:10rpx 0;}
.goods_tabs{background:#fff;text-align:center;font-size:28rpx;height:80rpx;line-height:80rpx;position:fixed;top:0;width:100%;border-bottom:1rpx solid #eee;}
.goods_tabs_row{margin:0 10px;display:inline-block;width:25%}
.active_item{background:#e40064;color:#fff;}

.goods_desc{background:#fff;padding:20rpx 10rpx 20rpx 30rpx;margin:20rpx 0;font-size:28rpx;line-height:60rpx;}
.goods_desc_more{height:60rpx;width:60rpx;}
.goods_desc_more image{width:40rpx;height:40rpx;margin:10rpx;display:block;}

.sanbao{padding:10rpx;border-bottom:1rpx solid #eee;font-size:26rpx;height:48rpx;line-height:48rpx;background:#fff;color:#595757;}
.sanbao .sanbao_ico{width:32rpx;height:34rpx;display:inline-block; vertical-align:middle;margin:0 6rpx;}
.sanbao_detail{background:#d8edf1;border:1rpx solid #5cc1cf;width:80rpx;border-radius:30rpx;float:right;line-height:40rpx;text-align:center;font-size:24rpx;}





.btn_block{position:fixed;bottom:0;height:100rpx;width:100%;background:#fff;color:#888;}
.btn_block_item{width:120rpx;text-align:center;position:relative;}
.btn_block_item image{width:50rpx;height:50rpx;display:block;margin:4px auto 0;}
.btn_block_item text{font-size:24rpx;display:block;}
.btn_block_item .cart_nums_t{position:absolute;top:10rpx;right:15rpx;background:#e40064;color:#fff;border-radius:50%;font-size:24rpx;padding:0 12rpx;}
.border_right_gray{border-right:1rpx solid #eee;}
.kefu_btn{position:absolute;top:0;left:0;right:0;bottom:0;}
.addtocart{background:#e40064;color:#fff;text-align:center;display:block;height:100rpx;line-height:100rpx;}
.unused{background:#ccc;color:#666;}

.pop_bg{background-color:rgba(0, 0, 0, 0.3);width:100%;position:absolute;z-index:10;top:0;bottom:0;left:0;right:0;}
.pop_cart{background:#fff;width:100%;position:fixed;z-index:100;bottom:0;}
.pop_cart_title{border-bottom:1rpx solid #eee;padding:10rpx;}
.pop_cart_img{width:200rpx;height:200rpx;margin-top:-80rpx;-webkit-box-shadow:3rpx 3rpx 3rpx #ccc;-moz-box-shadow:3rpx 3rpx 3rpx #ccc;box-shadow:3rpx 3rpx 3rpx #ccc;padding:6rpx;background:#fff;border-radius:6rpx;}
.pop_cart_img image{width:200rpx;height:200rpx;display:block;}

.pop_cart_mtitle{font-size:24rpx;padding:10rpx 0 0 20rpx;}
.pop_price{font-size:36rpx;}

.pop_cart_close{width:40rpx;}
.pop_cart_close image{width:40rpx;height:40rpx;}
.hideitem{display: none;}

.pop_cart_guige{padding:20rpx;border-bottom:1rpx solid #eee;}
.pop_cart_guige_title{font-size:28rpx;margin:0 0 20rpx;}
.pop_cart_guige_item{background:#f5f5f5;color:#333;padding:10rpx;margin-right:20rpx;display:inline-block;font-size:24rpx;border-radius:6rpx;}
.guige_itemin{background:#e40064;color:#fff;}

.pop_cart_nums{margin-bottom:30rpx;padding:20rpx;border-bottom:1rpx solid #eee;font-size:28rpx;line-height:40rpx;}
.pop_cart_nums_btns{width:200rpx;}
.nums_jian,.nums_jia{background:#ccc;color:#000;width:50rpx;height:50rpx;line-height:50rpx;text-align:center;font-size:24rpx;display:inline-block; vertical-align:middle}
.gray_bg{background:#f5f5f5;}
.nums_jian image,.nums_jia image{width:30rpx;height:30rpx;margin:10rpx;}
.nums{display: inline-block;width:80rpx;height:50rpx;line-height:50rpx;text-align:center;background:#eee;margin:0 2rpx;border:none;vertical-align:middle}

.pop_cart_submit{height:100rpx;line-height:100rpx;width:100%;text-align:center;color:#fff;background:#e40064;}

.redfont{color:#e40064;}


/*********comment*********/
.goods_comment{background:#fff;padding:10rpx 15px;font-size:24rpx;color:#aaa;}
.goods_comment_title{border-bottom:1rpx solid #eee;line-height:80rpx;height:80rpx;}
.title_name{font-size:28rpx;color:#333;}
.comment_title_more{padding:0 10rpx;}
.comment_info{padding:20rpx 0;}
.comment_user{color:#333;font-size:28rpx;}
.comment_user image{width:40rpx;height:40rpx;border-radius:50%;margin-right:10rpx; vertical-align:middle}
.comment_time{padding:0 10rpx;}
.comment_desc{color:#666;padding:10rpx 0;}

.goods_comment_row{border-bottom:1px solid #eee;padding:20rpx 0;}
.comment_img{width:100rpx;height:100rpx;display: inline-block;margin-right:10rpx;border:1rpx solid #eee;}
.comment_img image{width:100rpx;height:100rpx;}


.sharebg{background-color:rgba(0, 0, 0, 0.3);width:100%;position:fixed;z-index:10;top:0;bottom:0;left:0;right:0;}
.shareHB{width:80%;margin:4% 10%;position:fixed;z-index:10000;top:0;}
.shareHB_c{background:#fff;}
.shareHB_c image.avatar{width:130rpx;height:130rpx;left:50%;margin-left:-65rpx;top:46rpx;position:absolute;border-radius:50%;}
.shareBtn{position:absolute;left:35%;bottom:-80rpx;width:30%;text-align:center;height:60rpx;line-height:60rpx;color:#000;font-size:32rpx;background:#fff;}


.popShare{background:#fff;position:fixed;width:100%;bottom:0;z-index:10000;}
.popShareC{background:#f2f2f2;text-align:center;width:100%;padding:40rpx 0;}
.popShareC_row{position:relative;}
.popShareC_img{width:100rpx;height:100rpx;padding:20rpx;border-radius:50%;background:#fff;margin:0 auto;}
.popShareC_img image{width:100rpx;height:100rpx;}
.popShareC_btn{background:#fff;border:1rpx solid #ccc;width:200rpx;text-align:center;font-size:28rpx;font-weight:bold;margin:20rpx auto;height:60rpx;line-height:60rpx;border-radius:8rpx;}
.popShare_tips{font-size:28rpx;padding:20rpx 30rpx;background:#f2f2f2;color:#e40064;}
.popShareClose{width:100%;height:100rpx;line-height:100rpx;text-align:center;font-size:32rpx;}

.show_more_comments{text-align:center;}