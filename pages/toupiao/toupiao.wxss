/* pages/toupiao/toupiao.wxss */
.tp_container{background:#fff;border:20rpx solid #5cc1cf;padding-bottom:50rpx;}
.tp_header{padding:20rpx;display:block;}
.tp_header image{width:100%;display:block;}
.tp_zddw{font-size:32rpx;text-align:center;padding-bottom:20rpx;}

.tp_endtime{width:100%;padding:20rpx 0;font-size:28rpx;text-align:center;}
.tp_endtime text{padding:0 10rpx;}
.tp_endtime .black_bg{background:#000;color:#fff;}
.tp_endtime .red_bg{background:#e40064;color:#fff;}

.search{padding:20rpx;border-radius:30rpx;height:60rpx;line-height:60rpx;}
.search_input{background:#eee;margin:0 10rpx;border-radius:30rpx;padding:0 30rpx;font-size:28rpx;position:relative;}
.search_input input{line-height:60rpx;height:60rpx;}
.search_keys_close{position:absolute;right:15px;top:6rpx;width:30rpx;height:30rpx;z-index:10;}
.search_keys_close image{width:30rpx;height:30rpx;border:1rpx solid #aaa;border-radius:50%;}
.search_btn{width:60rpx;height:60rpx;position:relative;}
.search_btn image{width:40rpx;height:40rpx;margin:10rpx;}
.submit_btn{position:absolute;top:0;right:0;left:0;bottom:0; opacity: 0;z-index:10;}

.company_list{display:block;padding:20rpx;}
.company_li{width:100%;margin-bottom:20rpx;}
.company_li .company_pic{width:100%;position:relative;}
.company_li image{width:100%;display:block;}
.company_no{position:absolute;top:20rpx;left:0;background:#5dc1cf;color:#fff;padding:0 30rpx 0 20rpx;border-top-right-radius:30rpx;border-bottom-right-radius:30rpx;}
.company_base{position:absolute;width:100%;bottom:0;left:0;background-color:rgba(0, 0, 0, 0.6);padding:10rpx 0;color:#fff;}
.company_name{font-size:32rpx;padding:0 20rpx;font-weight:bold;}
.company_kouhao{font-size:28rpx;padding:0 20rpx;color:#ccc;}
.company_info{background:#e5e6e6;padding:20rpx;}
.company_info_btn{display:inline-block;}
.tp_btn_text{display:inline-block;}
.tp_btn_text text{display:block;font-size:28rpx;}
.btp_btn_img{display:inline-block;padding-left:10rpx; vertical-align:top;position:relative;}
.btp_btn_img image{width:80rpx;height:80rpx;display:block;}
.btp_btn{z-index:100;position:absolute;top:0;right:0;bottom:0;left:0;opacity:0}
.company_share{display:inline-block;text-align:center;font-size:20rpx;color:#e40064}
.company_share image{width:60rpx;height:60rpx;margin:0 auto;}

.bold{font-weight:bold;}

.menu{background:#5cc1cf;color:#fff;font-size:28rpx;position:fixed;bottom:0;width:100%;height:100rpx;line-height:100rpx;text-align:center;}
.menu_item{position:relative;}
.menu_main{background:#5cc1cf;position:absolute;z-index:1000;border-radius:50%;width:60%;height:80rpx;top:-40rpx;left:20%}
.menu_main image{width:80rpx;height:80rpx;display:inline-block; vertical-align:top}
.menu_words{position:absolute;z-index:1001;width:60%;left:20%;text-align:center;}

.sharebg{background-color:rgba(0, 0, 0, 0.3);width:100%;position:fixed;z-index:10;top:0;bottom:0;left:0;right:0;}
.shareHB{width:80%;margin:4% 10%;position:fixed;z-index:10000;top:0;}
.shareHB_c{background:#fff;}
.shareBtn{position:absolute;left:35%;bottom:-80rpx;width:30%;text-align:center;height:60rpx;line-height:60rpx;color:#000;font-size:32rpx;background:#fff;}


.popShare{background:#fff;position:fixed;width:100%;bottom:0;z-index:10000;}
.popShareC{background:#f2f2f2;text-align:center;width:100%;padding:40rpx 0;}
.popShareC_row{position:relative;}
.popShareC_img{width:100rpx;height:100rpx;padding:20rpx;border-radius:50%;background:#fff;margin:0 auto;}
.popShareC_img image{width:100rpx;height:100rpx;}
.popShareC_btn{background:#fff;border:1rpx solid #ccc;width:200rpx;text-align:center;font-size:28rpx;font-weight:bold;margin:20rpx auto;height:60rpx;line-height:60rpx;border-radius:8rpx;}
.popShare_tips{font-size:28rpx;padding:20rpx 30rpx;background:#f2f2f2;color:#e40064;}
.popShareClose{width:100%;height:100rpx;line-height:100rpx;text-align:center;font-size:32rpx;}

/* 返回顶部 */
.widget-goTop { 
  position: fixed; 
  bottom: 125px; 
  right: 5px; 
  background: rgba(0,0,0,0.48); 
  border-radius: 50%; 
  overflow: hidden; 
  z-index: 500; 
} 
.widget-goTop .gotop-wrap { 
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  width: 50px; 
  height: 50px; 
  font-size: 12px; 
  color: #fff; 
  border-radius: 50%; 
  background-color: rgba(0,0,0,0.8); 
  -webkit-background-size: 50px auto; 
}