/* pages/member/tools/orders/orders.wxss */

.title{height:100rpx;line-height:100rpx;background:#fff;text-align:center;}



.section{margin:0;}
.scroll_block{white-space: nowrap;background:#fff;color:#000;}
.scroll-view-item{display: inline-block;padding:0 35rpx;height:80rpx;line-height:80rpx;color:#000;font-size:28rpx;}
.toview{color:#d4237a;border-bottom:1rpx solid #d4237a;}
.item_in{color:#d4237a;border-bottom:2rpx solid #d4237a;}

.cartlist_title{height:80rpx;width:100%;line-height:80rpx;color:#fff;background:#9d8557;text-align:center;margin-bottom:20rpx;}
.cartlist{margin:20rpx 0;}
.cartlist_row{margin-top:20rpx;padding:20rpx;background:#fff;font-size:28rpx;}

.order_title{border-bottom:1rpx solid #eee;padding-bottom:10rpx;}
.order_info{padding:10rpx 0;}
.order_img{width:80rpx;height:80rpx;margin-right:20rpx;}
.order_img image{width:80rpx;height:80rpx;display:block;}
.order_tips{border-top:1rpx solid #eee;padding:10rpx 0 0;}
.cart_desc{font-size:24rpx;color:#666;}

.delbtn{text-align:right;display:block;}
.delbtn image{width:50rpx;height:50rpx;}

.paybtn{background:#d4237a;color:#fff;width:140rpx;border-radius:6rpx;font-size:24rpx;line-height:60rpx;text-align:center;display: inline-block;margin-right:10rpx;}
.infobtn{background:#5cc1cf;color:#fff;width:140rpx;border-radius:6rpx;font-size:24rpx;line-height:60rpx;text-align:center;display: inline-block;margin-right:10rpx;}

.gray_bg{background-color:rgba(0, 0, 0, 0.7);width:100%;height:100%;position:absolute;z-index:1;top:0;bottom:0;right:0;left:0;display:none;}
.isshow{display: block;}

.shareQR{width:500rpx;height:500rpx;margin:100rpx auto;position:relative;z-index:10000;}
.shareQR image{width:500rpx;height:500rpx;}
.orderqrshow{display: block;text-align:center;}
.orderqrshow image{width:500rpx;height:500rpx;}

.kuaidi{background:#fff;margin:30rpx;padding:30rpx;border-radius:10rpx;}

.comment_block{position:relative;z-index:10000;top:100rpx;width:82%;background:#fff;margin:0 5%;padding:4%;font-size:24rpx;}
.row_title{margin-right:30rpx;width:150rpx;}
.input_txt{font-size:28rpx;border:1prx solid #eee;}
.input_textarea{width:500rpx;padding:10rpx 0;height:200rpx;border:1prx solid #eee;}

.shop_pic{display:inline-block;}
.shop_pic_add{width:70rpx;height:70rpx;border:1rpx solid #ddd;padding:20rpx;display:inline-block;margin:0 10rpx 10rpx 0;}
.add_img{width:70rpx;height:70rpx;}
.shop_pic_view{width:86rpx;height:86rpx;border:1rpx solid #ddd;padding:4rpx;display:inline-block;margin:0 10rpx 10rpx 0;position:relative;}
.view_img{width:86rpx;height:86rpx;}
.delimg{background-color:rgba(0, 0, 0, 0.7);width:100%;position:absolute;bottom:0;right:0;height:30rpx;text-align:right;}
.del_img{width:30rpx;height:30rpx;}


.comment_btn{background:#d4237a;height:80rpx;line-height:80rpx;color:#fff;text-align:center;border-radius:5rpx;margin:30rpx 0;font-size:28rpx;}

.close_btn{background:#eee;border:none;height:80rpx;line-height:80rpx;color:#000;text-align:center;border-radius:5rpx;margin:30rpx 0;font-size:28rpx;}