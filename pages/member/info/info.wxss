  width: 100%;
}

.shop_pic{display:inline-block;}
.shop_pic_add{width:70rpx;height:70rpx;border:1rpx solid #ddd;padding:20rpx;display:inline-block;margin:0 10rpx 10rpx 0;}
.add_img{width:70rpx;height:70rpx;}
.shop_pic_view{width:86rpx;height:86rpx;border:1rpx solid #ddd;padding:4rpx;display:inline-block;margin:0 10rpx 10rpx 0;position:relative;}
.view_img{width:86rpx;height:86rpx;}
.delimg{background-color:rgba(0, 0, 0, 0.7);width:100%;position:absolute;bottom:0;right:0;height:30rpx;text-align:right;}
.del_img{width:30rpx;height:30rpx;}

.rz_btn{background:#5cc1cf;height:80rpx;line-height:80rpx;color:#fff;margin:20rpx;text-align:center;border-radius:10rpx;}