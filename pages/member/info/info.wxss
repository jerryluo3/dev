.rz_body{background:#fff;font-size:28rpx;}
.rz_body_row{border-bottom:1rpx solid #eee;padding:10rpx 20rpx;}
.rz_logo{width:150rpx;height:150rpx;margin:0 auto;border:1rpx solid #eee;}
.row_title{margin-right:30rpx;width:150rpx;}
.input_txt{font-size:28rpx;}
.input_textarea{width:500rpx;padding:10rpx 0;height:200rpx;}

.shop_un_location{padding:10rpx 0;text-align:center;}
.un_location_p{color:#000;}
.un_location_span{color:#777;}

.location_choose,.location_clear{border:1rpx solid #ccc;color:#000;height:80rpx;line-height:80rpx;padding:10rpx 30rpx;text-align:center;margin:0 20rpx;border-radius:10rpx;}
