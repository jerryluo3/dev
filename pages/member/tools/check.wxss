page{height:auto;background-color:white;}
.container{display:block}
.page-check{background-color:white;}
    .step1-container{}
        .step1-container button{width:100%;}
        .step1-container button.submit-button{position:fixed;bottom:0;z-index:5;}
        .gallery-container{width:100%;display:flex;flex-direction: column;}
            .gallery-container .picture{}
                .picture .item-content{align-items: center;}
                    .item-content .thumb-container{width:200rpx;height:auto;}
                    .item-content .thumb{width:200rpx;}
                .picture .progress-container{width:100%;margin-top:30rpx;flex-direction: column;}
                  .progress-container .weui-progress__bar{width:100%;}
                  .progress-container .weui-progress__opr{margin-top:30rpx;}

    .step2-container{}
        .productlist-container{height:100%;}
            scroll-view.product-scroll-view{background-color:white;}
                .product-item{border-bottom:2rpx solid #ddd;padding:20rpx;}
                    .product-item .thumbnail{margin-right:20rpx;}
                    .product-item .thumbnail image{width:120rpx;height:120rpx;}

                    .product-detail{}
                        .product-detail .product-name{}
                        .product-detail .stock{}

                    .input-container{width:200rpx;}
                        .input-container input{border:solid 2rpx #aaa;text-align:center;height:60rpx;line-height:60rpx;padding:6rpx 10rpx;font-size:40rpx;}

        .button-container{width:100%;position:fixed;z-index:10;bottom:0;}
            .button-container .button{background-color:#f60;height:100rpx;line-height:100rpx;text-align:center;color:white; font-size:32rpx;}
            .patch{width:100%;height:100rpx;}

            .disabled{color:#666;}

    .step3-container{}

    .blue{background-color:blue}
    .correct{background-color:green}
    .wrong{background-color:red}

     .weui-navbar__slider{width:192rpx;}


