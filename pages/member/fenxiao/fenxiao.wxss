/* pages/member/fenxiao.wxss */

.section{margin:0;}
.fenxiao_header{background:#5cc1cf;height:260rpx;position:relative;border-top:1rpx solid #9bdae9;}
.fenxiao_header_c{background:#fff;width:96%;margin:0 2%;position:absolute;top:40rpx;border-radius:10rpx;height:300rpx;}

.fenxiao_userinfo{border-bottom:1rpx solid #eee;padding:30rpx 0;}
.fenxiao_userinfo text{display:block;line-height:48rpx;}
.nickname{font-weight:bold;padding:10rpx 0 6rpx}
.nickname,.tjname{font-size:28rpx;}
.userinfo-avatar { width: 100rpx;  height: 100rpx;  margin:0 20rpx;  border-radius: 50%;border:1rpx solid #eee;}
.mobile{font-size:24rpx;font-weight:normal;color:#828282;}
.vip_ico{width:76rpx;height:24rpx;display:inline-block;}
.vip_ico image{width:76rpx;height:24rpx;display:block;}
.tjname{background:#e5e5e5;padding:0 20rpx 0 30rpx;border-top-left-radius:30rpx;border-bottom-left-radius:30rpx;height:50rpx;line-height:50rpx;font-size:20rpx;margin:20rpx 0 0;}

.fenxiao_info{width:100%;background:#fff;text-align:center;}
.fenxiao_info_words{font-size:32rpx;border-right:1rpx solid #eee;margin:20rpx 0;}
.fenxiao_info_words text{width:100%;display:block;}
.fenxiao_info_words .tx_money{font-size:36rpx;color:#f00;font-weight:bold;}
.fenxiao_info .tx_btn{background:#fff;color:#333;border:1rpx solid #75bec5;border-radius:6rpx;width:150rpx;margin:30rpx auto;height:60rpx;line-height:60rpx;font-size:28rpx;}

.fenxiao_yjinfo{padding:20rpx 0;}
.fenxiao_yjinfo text{display:block;line-height:48rpx;}
.yj_info{margin-bottom:20rpx;font-size:28rpx;}

.fenxiao_blank{width:100%;height:140rpx;}
.sy_info{width:100%;background:#fff;padding:20rpx 0;}
.sy_info_row{width:100%;text-align:center;font-size:28rpx;color:#666;}
.sy_info_item{border-right:1rpx solid #eee;padding:20rpx 0;}
.sy_info_item text{display:block;}
.sy_info_item  .sy_money{font-size:36rpx;color:#333;}



.fenxiao_tools{background:#fff;}
.weui-grid__icon{width:80rpx;height:80rpx;}
.fx_ico{width:80rpx;height:80rpx;}
.fx_btn_name,.fx_btn_fee{display: block}


.gray_bg{background-color:rgba(0, 0, 0, 0.7);width:100%;height:100%;position:fixed;z-index:100;top:0;padding:20px 0 0 ;display:none;}
.bg_show{display: block;}
.shareQR{width:500rpx;height:600rpx;margin:100rpx auto;position:relative;z-index:10000;}
.shareQR image{width:500rpx;height:600rpx;}



.sharebg{background-color:rgba(0, 0, 0, 0.3);width:100%;position:fixed;z-index:10;top:0;bottom:0;left:0;right:0;}
.shareHB{width:80%;margin:4% 10%;position:fixed;z-index:10000;top:0;}
.shareHB_c{background:#fff;}
.shareBtn{position:absolute;left:35%;bottom:-80rpx;width:30%;text-align:center;height:60rpx;line-height:60rpx;color:#000;font-size:32rpx;background:#fff;}

.popShare{background:#fff;position:fixed;width:100%;bottom:0;z-index:10000;}
.popShareC{background:#f2f2f2;text-align:center;width:100%;padding:40rpx 0;}
.popShareC_row{position:relative;}
.popShareC_img{width:100rpx;height:100rpx;padding:20rpx;border-radius:50%;background:#fff;margin:0 auto;}
.popShareC_img image{width:100rpx;height:100rpx;}
.popShareC_btn{background:#fff;border:1rpx solid #ccc;width:200rpx;text-align:center;font-size:28rpx;font-weight:bold;margin:20rpx auto;height:60rpx;line-height:60rpx;border-radius:8rpx;}
.popShare_tips{font-size:28rpx;padding:20rpx 30rpx;background:#f2f2f2;color:#e40064;}
.popShareClose{width:100%;height:100rpx;line-height:100rpx;text-align:center;font-size:32rpx;}

.member_block{background:#fff;width:100%;margin-bottom:20rpx;padding:20rpx 0;font-size:28rpx;}
.tools_row{border-bottom:1rpx solid #eee;line-height:100rpx;height:100rpx;position:relative;}
.block_ico{width:100rpx;height:100rpx;text-align:center;}
.block_ico image{width:50rpx;height:50rpx;margin:25rpx 0 0;display:inline-block;}
.block_more{width:100rpx;height:100rpx;text-align:right;}
.block_more image{width:30rpx;height:30rpx;margin:40rpx 20rpx 0;}
.block_name{line-height:100rpx;font-weight:bold;font-size:30rpx;}
.del{text-decoration:line-through;color:#888;}
.vipprice{font-weight:normal;font-size:24rpx;}