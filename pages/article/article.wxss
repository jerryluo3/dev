/* pages/article/article.wxss */

.swiper {padding:20rpx;background:#fff;display:block;height: 350rpx;}
.swiper swiper {width: 100%;height: 100%;}
.swiper image {width: 100%;height: 100%;border-radius:10rpx;}

.article_cat{height:100rpx;width:100%;text-align:center;padding:10rpx 0;background:#fff;border-bottom:1rpx solid #eee;margin-bottom:20rpx;}
.article_cat_img{width:40rpx;height:40rpx;margin:0 auto;}
.article_cat_img image{width:40rpx;height:40rpx;}
.article_cat_name{height:50rpx;line-height:50rpx;font-size:28rpx;}

.article_list{width:100%;}
.article_list_row{background:#fff;padding:30rpx;border-bottom:1rpx solid #eee;}
.article_list_row .article_img{width:213rpx;}
.article_list_row .article_img image{width:213rpx;display:block;height:160rpx;}
.article_list_row .article_title{height:100rpx;line-height:50rpx;padding:0rpx 20rpx;font-size:32rpx;overflow:hidden;}


.article_tips_zan,.article_tips_view{display:inline-block;padding:0 50rpx 0 20rpx;font-size:24rpx;color:#8a8a8a;line-height:40rpx;}
.article_tips_zan image,.article_tips_view image{width:40rpx;height:40rpx;vertical-align:middle;margin-right:6rpx;}
.article_tips_zan text,.article_tips_view text{line-height:40rpx;}
