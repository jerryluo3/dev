.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.cart_btn_add{font-family:Arial, Helvetica, sans-serif;border-radius:50%;font-size:60rpx;width:60rpx;height:60rpx;line-height:60rpx;color:#fff;text-align:center;vertical-align: top;}
.cart_btn_sub{font-family:Arial, Helvetica, sans-serif;border-radius:50%;font-size:60rpx;width:60rpx;height:60rpx;line-height:60rpx;color:#666;text-align:center;background:#fff;border:1px solid #ddd;box-sizing:border-box;vertical-align: top;}

/*topSwiper*/
.swiper-container{
  width:750rpx;
  height:220rpx;
  position:relative;
}
  swiper{
    width:100%;
    height:100%;
  }
    swiper-item image{
      width:100%;
      height:100%;
    }
    swiper-item navigator{
      width:100%;
      height:100%;
    }
  .swiper-container .text-container{
    width:100%;
    position:absolute;
    bottom:0;
    height:30px;
    line-height:30px;
    font-size:12px;
    background-color:rgba(0,0,0,0.7);
    color:#ccc;
  }
    .text-container{
      float:left;
    }

    .text-container image{
      width:20px;
      height:20px;
      float:left;
      margin-top:5px;
    }

/*list*/
.list-container{
  height:100%;
  overflow:hidden;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
  .sort-scroll-view{width:160rpx;height:100%;background-color:#f4f4f4;}
    .sort-list{text-align:center;font-size:24rpx;color:black;}
      .sorter{line-height:120rpx;height:120rpx;}
      .sorter.active{background-color:white;color:#0cc2cf;font-weight:bold;font-size:28rpx;border-left:2px solid #00a2cf;}
    view.right-container{width:590rpx;display:flex;flex-direction:column;background-color:#fff;}
    .search-container{
      height:68rpx;
flex-shrink:0;
background-color:rgba(0,0,0,0);
align-items:center;
font-size:28rpx;
border:solid 1px #aaa;
width:92%;
margin:4%;
box-sizing:border-box;
    }
      .input-container{}
        .input-container input#search{padding-left:20rpx;
line-height:68rpx;
height:68rpx;
}
.input-container input#search:placeholder{font-size:28rpx;}
        .search-container .item{height:68rpx;width:68rpx;border-left:2rpx solid #ccc;
}
        .item.voice{}
        .item.search{}
        .item.saoyisao{}
        .item.wechat{}
        .item.unfold{}
          .search-container .item image{width:48rpx;
height:48rpx;
margin:10rpx;
}
    .product-container{
      padding:0 20rpx;
      height:100%;
      display:flex;
    }

    .product-scroll-view{height:100%;}
      .product{
        padding:20rpx 0;
        border-bottom:solid 1px #eee;
      }
      .thumbnail image{
        width:120rpx;
        height:120rpx;
      }
      .product-detail{}
        .product-detail .title{}
        .product-detail .stock{}
        .product-detail .prize-line{}
          .prize-line .prize{line-height:44rpx;text-align:left;text-indent:4px;}
          .prize-line .button-group{text-align:right;line-height:60rpx;height:60rpx;}
            .prize-line .button-group .number{line-height:60rpx;text-align:center;padding:0 16rpx;font-size:30rpx;vertical-align: top;}

  .cart-container{
    position:absolute;
    bottom:100rpx;
    width:100%;
    height:100rpx;
    background-color:#fff;
    border-top:solid 1px #eee;
    z-index:20;
  }
      .cart-left{padding:20rpx;}
        .cart-icon{position:relative;width:60rpx;height:60rpx;}
          .cart-icon image{width:100%;height:100%;}
          .cart-icon span.number{position:absolute;top:-6rpx;right:-6rpx;width:32rpx;height:32rpx;font-size:20rpx;color:white;background-color:rgba(0,0,0,0.8);border-radius:16rpx;text-align:center;line-height:32rpx;}
        .calc-container{margin-left:20rpx;}
          .calc-container .txt{color:#000;font-size:28rpx;align-items:center;height:60rpx;line-height:60rpx;}
          .calc-container .num{color:#F40;align-items:center;}
      .cart-right{padding:15rpx;}
        .cart-right button{color:#fff;width:200rpx;height:70rpx;line-height:70rpx;}


  .pop-mask{width:100%;height:100%;position:absolute;z-index:5;background-color:rgba(0,0,0,0.5);bottom:0;}
  .pop-container{position:absolute;bottom:200rpx;width:100%;z-index:6;padding:0 30rpx;background-color:white;box-sizing:border-box;}
    .pop-container .cart-list-container{}
    .cart-list-title{color:#666;font-size:28rpx;line-height:80rpx;border-bottom:solid 1px #eee;}
      .cart-list-title .txt{}
      .txt span{}
    .scroll-container-cart{max-height:400rpx;}
      .scroll-container-cart scroll-view{height:100%;max-height:360rpx;}
      .cart-item{font-size:28rpx;color:#333;padding:20rpx 0;height:50rpx;line-height:50rpx;}
        .cart-item view{box-sizing:border-box;}
        .cart-item .name{}
        .cart-item .prize{padding:0 40rpx;}
        .cart-item .button-group{width:160rpx;align-items: center;}
        .cart-item .button-group .number{padding:0 10rpx;}

  .authorize-container{position: absolute;z-index:10;}
    .authorize-container .title{}
    .authorize-container button{}
    .authorize-container .close{}
      .authorize-container .close image{width:200rpx;height:200rpx;}


.patcher{height:200rpx;flex-shrink:0;width:100%;}
